<Window x:Class="WpfApp1.Views.EditTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:vm="clr-namespace:WpfApp1.ViewModels"
        mc:Ignorable="d"
        Title="EditTaskWindow" Height="393" Width="500">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Title" Style="{StaticResource one}" Margin="5 0 0 0 "/>
            <TextBox Text="{Binding Title}" Margin="0,0,0,10" />
            <Label Content="Description"  Margin="5 0 0 0 "/>

            <TextBox Text="{Binding Description}" Margin="0,0,0,10" Height="35" />
            <Label Content="Category" />

            <ComboBox ItemsSource="{Binding Categories}" SelectedItem="{Binding SelectedCategory}" Margin="0,0,0,10" />
            <Label Content="Date"/>
            <DatePicker SelectedDate="{Binding StartDate}" Margin="0,0,0,10" />
            <!-- Start Time -->
            <StackPanel Orientation="Horizontal" Margin="10,5,0,0">
                <Label Content="Start :"/>
                <ComboBox ItemsSource="{Binding Hours}" SelectedItem="{Binding StartHour}" Width="50" Margin="5"/>
                <ComboBox ItemsSource="{Binding AmPmOptions}" SelectedItem="{Binding StartAmPm}" Width="50" Margin="5"/>
            </StackPanel>

            <!-- End Time -->
            <StackPanel Orientation="Horizontal" Margin="10,5,0,0">
                <Label Content="End :"/>
                <ComboBox ItemsSource="{Binding Hours}" SelectedItem="{Binding EndHour}" Width="50" Margin="5"/>
                <ComboBox ItemsSource="{Binding AmPmOptions}" SelectedItem="{Binding EndAmPm}" Width="50" Margin="5"/>
            </StackPanel>


            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Save" Command="{Binding SaveCommand}" Margin="5"/>
                <Button Content="Cancel" Command="{Binding CancelCommand}" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
