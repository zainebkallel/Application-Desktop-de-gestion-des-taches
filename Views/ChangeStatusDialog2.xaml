<Window x:Class="WpfApp1.Views.ChangeStatusDialog2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Views"
        mc:Ignorable="d"
        Title="ChangeStatusDialog2" Height="200" Width="400">
    <StackPanel>
        <TextBlock Text="Select if the task is completed" Margin="10"/>
        <RadioButton Content="Complete" GroupName="Statues" Tag="Complete" Margin="10"/>
        <Button Content="OK" Click="OkButton_Click" Margin="10"/>
        <Button Content="Cancel" Click="CancelButton_Click" Margin="10"/>
    </StackPanel>
</Window>

