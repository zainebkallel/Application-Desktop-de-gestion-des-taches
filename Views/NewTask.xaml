<Window x:Class="WpfApp1.Views.NewTask"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:local="clr-namespace:WpfApp1.Views"
        xmlns:vm="clr-namespace:WpfApp1.ViewModels"
        mc:Ignorable="d"
        Title="Add New Task" Height="406" Width="298"
        WindowStartupLocation="CenterScreen"
        
        >
    <Window.DataContext>
        <vm:NewTaskViewModel/>
    </Window.DataContext>
    <Border Background="AliceBlue"  >
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="251*"/>
                <ColumnDefinition Width="49*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.ColumnSpan="2" Margin="0,0,0,41">
                <Label Content="Title" Style="{StaticResource one}" Margin="5 0 0 0 "/>
                <TextBox Name="Title" Text="{Binding Title}" Margin="0,0,0,10" Style="{StaticResource NewTask}"/>
                <Label Content="Description" Style="{StaticResource one}" Margin="0 0 0 0 "/>

                <TextBox Name="Description" Text="{Binding Description}" Margin="0,0,0,10" Height="43" Style="{StaticResource NewTask}"/>
                <Label Content="Category" Style="{StaticResource one}" Height="23"/>

                <ComboBox ItemsSource="{Binding TaskCategories}" SelectedItem="{Binding TaskCategory}" />
                <Label Content="Status" Style="{StaticResource one}" Margin="5 0 0 0 "/>

                <ComboBox ItemsSource="{Binding TaskStatuses}" SelectedItem="{Binding TaskStatues}" />

                <TextBlock Text="Date" />
                <DatePicker SelectedDate="{Binding StartDate}" Margin="0,0,0,10" />
                <StackPanel Orientation="Horizontal">
                    <Label Content="Start" Style="{StaticResource one}" Margin="0 0 5 0 "/>
                    <ComboBox ItemsSource="{Binding Hours}"
              SelectedItem="{Binding StartHour, Mode=TwoWay}"
              Height="16"/>
                    <ComboBox ItemsSource="{Binding AmPmOptions}"
              SelectedItem="{Binding StartAmPm, Mode=TwoWay}"
              Height="17" Width="14"/>

                    <!-- Start Hour ComboBox -->

                    <!-- Start AM/PM ComboBox -->
                    <Label Content="End" Style="{StaticResource one}" Margin="5 0 0 0 "/>

                    <!-- End Hour ComboBox -->
                    <ComboBox ItemsSource="{Binding Hours}"
              SelectedItem="{Binding EndHour, Mode=TwoWay}"
              Margin="0,0,0,0" Height="15" Width="25"/>
                    <ComboBox ItemsSource="{Binding AmPmOptions}"
              SelectedItem="{Binding EndAmPm, Mode=TwoWay}"
              Height="16" Width="15" SelectionChanged="ComboBox_SelectionChanged"/>

                    <!-- End AM/PM ComboBox -->
                </StackPanel>

                <Button Content="Submit" Command="{Binding SubmitCommand}" Width="100" Style="{StaticResource Add}" Margin="25" />

            </StackPanel>

        </Grid>
    </Border>
</Window>
